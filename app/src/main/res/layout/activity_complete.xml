<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iclab.st.CompleteActivity">


    <Button
        android:id="@+id/resultBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/color_drakGray"
        android:fontFamily="@font/godo"
        android:text="상세"
        android:textColor="@color/color_background"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="380dp">

        <TextView
            android:id="@+id/dataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/around_box"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scrollbars="vertical"
            android:text="TextView"
            android:fontFamily="@font/godo"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/extradataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/resultBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/dataText"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:layout_marginBottom="-3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/around_box"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:scrollbars="vertical"
            android:text="TextView"
            android:fontFamily="@font/godo"
            android:textSize="10pt" />

        <Button
            android:id="@+id/resultBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/extradataText"
            android:layout_alignRight="@+id/extradataText"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/color_drakGray"
            android:fontFamily="@font/godo"
            android:text="완료"
            android:textColor="@color/color_background"
            android:textSize="18dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
